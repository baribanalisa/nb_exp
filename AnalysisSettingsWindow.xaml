<Window x:Class="NeuroBureau.Experiment.AnalysisSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки анализа"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        Background="#F9FAFB"> <!-- Светлый фон всего окна -->

    <Window.Resources>
        <!-- Цвета -->
        <SolidColorBrush x:Key="TextBrush" Color="#FF111827"/>
        <SolidColorBrush x:Key="BlueBrush" Color="#2563EB"/>

        <!-- Тот самый стиль кнопок -->
        <Style x:Key="PillButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF111827"/>
            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFF3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFE5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Стиль вкладок как в главном окне ===== -->
        <Style x:Key="TopTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="TopTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                TextElement.FontWeight="SemiBold"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource BlueBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource BlueBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TabControl x:Name="RootTabs" Grid.Row="0" MinWidth="520" Style="{StaticResource TopTabControlStyle}">
                <TabItem Header="Детекция" Style="{StaticResource TopTabItemStyle}">
                    <StackPanel Margin="0,10,0,0">
                        <!-- Общие -->
                        <Border CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB" Background="White" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="240"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Общие параметры" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,4"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" Text="Глаз"/>
                                <ComboBox x:Name="EyeCombo" Grid.Row="2" Grid.Column="1" Height="28"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" Text="Шумоподавление"/>
                                <ComboBox x:Name="NoiseCombo" Grid.Row="4" Grid.Column="1" Height="28"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" Text="Окно фильтра (сэмплы)"/>
                                <TextBox x:Name="WindowSizeBox" Grid.Row="6" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" Text="Gap filling (сэмплы)"/>
                                <TextBox x:Name="GapWindowSizeBox" Grid.Row="8" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Foreground="#555" Text="MaxSpeed (°/сек)"/>
                                <TextBox x:Name="MaxSpeedBox" Grid.Row="10" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                            </Grid>
                        </Border>

                        <TabControl x:Name="AlgoTabs" MinWidth="520" Margin="0,16,0,0" Style="{StaticResource TopTabControlStyle}">
                            <TabItem Header="IDT" Style="{StaticResource TopTabItemStyle}">
                                <Border CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB" Background="White" Padding="16" Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="240"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="12"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontWeight="SemiBold" Text="I-DT (Dispersion)"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="DispersionThreshold (px)"/>
                                        <TextBox x:Name="IdtDispersionBox" Grid.Row="2" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="MinDuration (ms)"/>
                                        <TextBox x:Name="IdtMinDurationBox" Grid.Row="4" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="MinWindow (ms)"/>
                                        <TextBox x:Name="IdtWindowBox" Grid.Row="6" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                                    </Grid>
                                </Border>
                            </TabItem>

                            <TabItem Header="IVT" Style="{StaticResource TopTabItemStyle}">
                                <Border CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB" Background="White" Padding="16" Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="240"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="12"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontWeight="SemiBold" Text="I-VT (Velocity)"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="SpeedFix (deg/sec)"/>
                                        <TextBox x:Name="IvtSpeedFixBox" Grid.Row="2" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="MinDuration (ms)"/>
                                        <TextBox x:Name="IvtMinDurationBox" Grid.Row="4" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="MergeTime (ms)"/>
                                        <TextBox x:Name="IvtMergeTimeBox" Grid.Row="6" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                                        <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="MergeAngle (deg)"/>
                                        <TextBox x:Name="IvtMergeAngleBox" Grid.Row="8" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                                    </Grid>
                                </Border>
                            </TabItem>
                        </TabControl>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Отображение" Style="{StaticResource TopTabItemStyle}">
                    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB" Background="White" Padding="16" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="240"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontWeight="SemiBold" FontSize="16" Text="Визуализация фиксаций"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Min radius (px)"/>
                            <TextBox x:Name="VisMinRadiusBox" Grid.Row="2" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Max radius (px)"/>
                            <TextBox x:Name="VisMaxRadiusBox" Grid.Row="4" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Max duration (sec)"/>
                            <TextBox x:Name="VisMaxDurationBox" Grid.Row="6" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Line width (px)"/>
                            <TextBox x:Name="VisLineWidthBox" Grid.Row="8" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Alpha (0-1)"/>
                            <TextBox x:Name="VisAlphaBox" Grid.Row="10" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" Text="Font family"/>
                            <TextBox x:Name="VisFontFamilyBox" Grid.Row="12" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" Text="Font size (px)"/>
                            <TextBox x:Name="VisFontSizeBox" Grid.Row="14" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="Тепловая карта" Style="{StaticResource TopTabItemStyle}">
                    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB" Background="White" Padding="16" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="240"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontWeight="SemiBold" FontSize="16" Text="Параметры тепловой карты"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Тип карты"/>
                            <ComboBox x:Name="HeatmapTypeCombo" Grid.Row="2" Grid.Column="1" Height="28"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Алгоритм"/>
                            <ComboBox x:Name="HeatmapFunctionCombo" Grid.Row="4" Grid.Column="1" Height="28"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Радиус (px)"/>
                            <TextBox x:Name="HeatmapRadiusBox" Grid.Row="6" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Начальная прозрачность"/>
                            <TextBox x:Name="HeatmapAlphaBox" Grid.Row="8" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Порог значения"/>
                            <TextBox x:Name="HeatmapThresholdBox" Grid.Row="10" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="Пчелиный рой" Style="{StaticResource TopTabItemStyle}">
                    <Border CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB" Background="White" Padding="16" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Параметры Bee Swarm" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="240"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Радиус круга (px)"/>
                                <TextBox x:Name="BeeRadiusBox" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="240"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Толщина линии (px)"/>
                                <TextBox x:Name="BeeLineBox" Grid.Column="1" Height="26" VerticalContentAlignment="Center" Padding="4,0"/>
                            </Grid>
                            
                            <TextBlock Text="* Прозрачность берется из вкладки 'Отображение'" 
                                    FontSize="12" Foreground="#888" Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- Buttons: применяем стиль PillButtonStyle -->
            <DockPanel Grid.Row="2" LastChildFill="False">
                <TextBlock x:Name="ErrorText" Foreground="#DC2626" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <!-- Стилизованные кнопки -->
                    <Button Content="Отмена" Style="{StaticResource PillButtonStyle}" Width="90" Margin="0,0,10,0" Click="Cancel_Click"/>
                    <Button Content="Применить" Style="{StaticResource PillButtonStyle}" Width="120" Background="#111827" Foreground="White" BorderThickness="0" Click="Ok_Click"/>
                </StackPanel>
            </DockPanel>

        </Grid>
    </Border>
</Window>