<Window x:Class="NeuroBureau.Experiment.BindSensorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Датчики эксперимента" Width="980" Height="560"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Устройства из exp.json">
            <ListBox x:Name="ExpDevicesList" SelectionChanged="ExpDevicesList_SelectionChanged"
                     DisplayMemberPath="Display"/>
        </GroupBox>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
            <Button Content="Привязать →" Click="Bind_Click" Margin="0,0,0,8"/>
            <Button Content="Отвязать" Click="Unbind_Click"/>
        </StackPanel>

        <GroupBox Grid.Column="2" Header="Глобальные сенсоры (фильтр по dev-type)">
            <ListBox x:Name="GlobalSensorsList" DisplayMemberPath="Display"/>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Сохранить" Click="Save_Click" FontWeight="Bold" Margin="0,0,8,0"/>
            <Button Content="Закрыть" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
