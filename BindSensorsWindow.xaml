<Window x:Class="NeuroBureau.Experiment.BindSensorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Датчики эксперимента" Width="980" Height="640"
        Background="{DynamicResource BgBrush}"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <SolidColorBrush x:Key="BgBrush" Color="#FFF7F7F9"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FF111827"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#FF6B7280"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#1A000000"/>
        <SolidColorBrush x:Key="BlueBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="BlueHoverBrush" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="BluePressedBrush" Color="#1E40AF"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="PressedBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="PillBorderBrush" Color="#E5E7EB"/>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="TopBarPillButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PillBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource PressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource TopBarPillButton}">
            <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BlueHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BlueHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource BluePressedBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BluePressedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E8F1FF"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#BBD6FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="24,20,24,16"
                Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrushSoft}"
                BorderThickness="1"
                CornerRadius="16"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Датчики эксперимента"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Привяжите устройства из exp.json к глобальным сенсорам."
                               Margin="0,4,0,0"
                               Foreground="{StaticResource MutedTextBrush}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Сохранить" Click="Save_Click" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="Закрыть" IsCancel="True" Style="{StaticResource TopBarPillButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Устройства из exp.json" Foreground="{StaticResource MutedTextBrush}" Margin="0,0,0,12"/>
                    <ListBox x:Name="ExpDevicesList"
                             SelectionChanged="ExpDevicesList_SelectionChanged"
                             DisplayMemberPath="Display"
                             ItemContainerStyle="{StaticResource ListBoxItemStyle}"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,16,0">
                <Button Content="Привязать →" Click="Bind_Click" Style="{StaticResource TopBarPillButton}" Margin="0,0,0,8"/>
                <Button Content="Отвязать" Click="Unbind_Click" Style="{StaticResource TopBarPillButton}"/>
            </StackPanel>

            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Глобальные сенсоры (фильтр по типу устройства)" Foreground="{StaticResource MutedTextBrush}" Margin="0,0,0,12"/>
                    <ListBox x:Name="GlobalSensorsList"
                             DisplayMemberPath="Display"
                             ItemContainerStyle="{StaticResource ListBoxItemStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
