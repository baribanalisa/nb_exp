<!-- File: MultiExportWindow.xaml -->
<Window x:Class="NeuroBureau.Experiment.MultiExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NeuroBureau.Experiment"
        Title="Мультиэкспорт"
        Width="1100" Height="750"
        Background="#F9FAFB"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed"
        Loaded="Window_Loaded">


    <Window.Resources>
        <local:StimulusDisplayNameConverter x:Key="StimulusDisplayNameConverter"/>
        <local:MultiExportModeDisplayConverter x:Key="MultiExportModeDisplayConverter"/>

        <!-- Палитра -->

        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutedSurfaceBrush" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextBrush" Color="#111827"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#6B7280"/>

        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1E40AF"/>

        <SolidColorBrush x:Key="ButtonHoverBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="ButtonPressedBrush" Color="#D1D5DB"/>

        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="2" Opacity="0.10" />

        <!-- Карточка -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Заголовок секции -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Лейблы внизу -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Кнопка secondary -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="{StaticResource MutedSurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource ButtonPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка primary -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="18">
        <Border Style="{StaticResource CardBorderStyle}">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Мультиэкспорт" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,14"/>

                <!-- Основная панель: списки стимулов и результатов -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Панель стимулов -->
                    <Border Style="{StaticResource CardBorderStyle}">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top">
                                <TextBlock Text="Стимулы" Style="{StaticResource SectionTitleStyle}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Выбрать все" Padding="8,4" Margin="0,0,8,0" Click="SelectAllStimuli_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                                    <Button Content="Снять" Padding="8,4" Click="ClearAllStimuli_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>

                            <Border DockPanel.Dock="Top" Height="1" Background="{StaticResource BorderColorBrush}" Margin="0,10,0,0"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                                <ItemsControl ItemsSource="{Binding Stimuli}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,0,6">
                                                <TextBlock Text="{Binding Stimulus, Converter={StaticResource StimulusDisplayNameConverter}}"
                                                           Foreground="{StaticResource TextBrush}"/>
                                            </CheckBox>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>

                    <!-- Панель результатов -->
                    <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top">
                                <TextBlock Text="Результаты" Style="{StaticResource SectionTitleStyle}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Выбрать все" Padding="8,4" Margin="0,0,8,0" Click="SelectAllResults_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                                    <Button Content="Снять" Padding="8,4" Click="ClearAllResults_Click" Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>

                            <Border DockPanel.Dock="Top" Height="1" Background="{StaticResource BorderColorBrush}" Margin="0,10,0,0"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                                <ItemsControl ItemsSource="{Binding Results}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,0,6">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Result.Name}" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Uid}" Foreground="{StaticResource MutedTextBrush}" FontSize="11"/>
                                                </StackPanel>
                                            </CheckBox>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </Grid>

                <!-- Нижняя панель: настройки экспорта -->
                <Grid Grid.Row="2" Margin="0,14,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Папка" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Grid.Column="1"
                         Text="{Binding OutputDir, UpdateSourceTrigger=PropertyChanged}"
                         MinWidth="520"/>
                <Button Grid.Column="2"
                        Content="…"
                        Width="44"
                        Margin="10,0,0,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="BrowseOutputDir_Click"/>

                <TextBlock Grid.Row="1" Text="Шаблон" Style="{StaticResource FormLabelStyle}" Margin="0,10,0,0"/>
                <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding FilenameTemplate, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="520"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding TemplateStatusEmoji}"
                               FontSize="16"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                               Text="{Binding TemplateStatusText}"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource MutedTextBrush}"/>
                </Grid>

                <TextBlock Grid.Row="2" Text="Режим" Style="{StaticResource FormLabelStyle}" Margin="0,10,0,0"/>

                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
                        Background="White"
                        BorderBrush="{StaticResource BorderColorBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="38">
                    <ComboBox SelectedValue="{Binding Mode}"
                              BorderThickness="0"
                              Background="Transparent"
                              Padding="10,8"
                              VerticalContentAlignment="Center"
                              ItemsSource="{Binding Modes}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource MultiExportModeDisplayConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>

                <!-- Форматы экспорта -->
                <TextBlock Grid.Row="3" Text="Формат данных" Style="{StaticResource FormLabelStyle}" Margin="0,10,0,0"/>
                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
                        Background="White"
                        BorderBrush="{StaticResource BorderColorBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="38">
                    <ComboBox SelectedValue="{Binding DataFormat}"
                              BorderThickness="0"
                              Background="Transparent"
                              Padding="10,8"
                              VerticalContentAlignment="Center"
                              ItemsSource="{Binding DataFormats}">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>

                <TextBlock Grid.Row="4" Text="Формат изображений" Style="{StaticResource FormLabelStyle}" Margin="0,10,0,0"/>
                <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
                        Background="White"
                        BorderBrush="{StaticResource BorderColorBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="38">
                    <ComboBox SelectedValue="{Binding ImageFormat}"
                              BorderThickness="0"
                              Background="Transparent"
                              Padding="10,8"
                              VerticalContentAlignment="Center"
                              ItemsSource="{Binding ImageFormats}">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="10,8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </Border>

                <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Чекбоксы в красивой сетке -->
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Grid.Column="0" 
                                  Content="Исходные данные (bin)" 
                                  IsChecked="{Binding ExportSource}" 
                                  IsEnabled="{Binding CanExportRawOrSource}" 
                                  Margin="0,0,10,8"/>
                        
                        <CheckBox Grid.Row="0" Grid.Column="1" 
                                  Content="Сырые данные взгляда" 
                                  IsChecked="{Binding ExportRaw}" 
                                  IsEnabled="{Binding CanExportRawOrSource}" 
                                  Margin="0,0,10,8"/>
                        
                        <CheckBox Grid.Row="1" Grid.Column="0" 
                                  Content="Действия" 
                                  IsChecked="{Binding ExportActions}" 
                                  IsEnabled="{Binding CanExportRawOrSource}" 
                                  Margin="0,0,10,8"/>
                        
                        <CheckBox Grid.Row="1" Grid.Column="1" 
                                  Content="Области интереса (JSON)" 
                                  IsChecked="{Binding ExportAoi}" 
                                  Margin="0,0,10,8"/>
                        
                        <CheckBox Grid.Row="2" Grid.Column="0" 
                                  Content="Изображение взгляда" 
                                  IsChecked="{Binding ExportGazeImage}" 
                                  IsEnabled="{Binding CanExportImages}" 
                                  Margin="0,0,10,8"/>
                        
                        <CheckBox Grid.Row="2" Grid.Column="1" 
                                  Content="Изображение тепловой карты" 
                                  IsChecked="{Binding ExportHeatImage}" 
                                  IsEnabled="{Binding CanExportImages}" 
                                  Margin="0,0,10,8"/>
                    </Grid>

                    <Button Grid.Column="1"
                            Content="Экспорт"
                            Click="Export_Click"
                            Width="120"
                            Height="36"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsEnabled="{Binding CanStartExport}"/>
                </Grid>
                </Grid>

                <!-- Статус в самом низу -->
                <TextBlock Grid.Row="3" 
                           Margin="0,16,0,0"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="12"
                           Text="{Binding StatusText}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
