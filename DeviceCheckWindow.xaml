<Window x:Class="NeuroBureau.Experiment.DeviceCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:NeuroBureau.Experiment.Controls"
        Title="Проверка устройств"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        ResizeMode="CanMinimize"
        Width="900"
        MaxWidth="1200">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Перед запуском проверим подключение устройств из эксперимента."
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Devices}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  MinWidth="600"
                  MinHeight="180"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Устройство" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="DevType" Binding="{Binding DevType}" Width="140"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Причина / детали" Binding="{Binding Details}" Width="3*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <Border x:Name="ShimmerChartsPanel" Grid.Row="2" 
                BorderBrush="#CCCCCC" BorderThickness="1" 
                CornerRadius="6" Padding="12" Margin="0,0,0,10"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Сигналы Shimmer в реальном времени" FontWeight="Bold" Margin="0,0,0,8"/>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="140"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ctrl:MetricChart x:Name="SrChart" Grid.Row="0" Grid.Column="0" Margin="0,0,6,6"/>
                    <ctrl:MetricChart x:Name="ScChart" Grid.Row="0" Grid.Column="1" Margin="6,0,0,6"/>
                    <ctrl:MetricChart x:Name="HrChart" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0"/>
                    <ctrl:MetricChart x:Name="PpgChart" Grid.Row="1" Grid.Column="1" Margin="6,6,0,0"/>
                </Grid>
                
                <!-- Секция превью взгляда -->
                <Border Margin="0,12,0,0" Padding="12" Background="#F8F8F8" CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                   Text="Превью взгляда" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Мини-окно с точкой взгляда -->
                            <Border Grid.Column="0" 
                                    Width="160" 
                                    Height="120" 
                                    Background="White" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Margin="0,0,12,0">
                                <Canvas x:Name="GazeCanvas" Background="White">
                                    <!-- Сетка -->
                                    <Line X1="0" Y1="60" X2="160" Y2="60" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                                    <Line X1="80" Y1="0" X2="80" Y2="120" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                                    
                                    <!-- Точка взгляда -->
                                    <Ellipse x:Name="GazePoint" 
                                             Width="8" Height="8" 
                                             Fill="Red" 
                                             Stroke="White" 
                                             StrokeThickness="1"
                                             Visibility="Collapsed"/>
                                    
                                    <!-- Траектория взгляда -->
                                    <Polyline x:Name="GazeTrail" 
                                              Stroke="#4A90E2" 
                                              StrokeThickness="1" 
                                              Fill="None"
                                              Opacity="0.7"/>
                                </Canvas>
                            </Border>
                            
                            <!-- Информация о взгляде -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="GazeStatus" 
                                           Text="Ожидание данных трекера..." 
                                           FontSize="12" 
                                           Foreground="#666666"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="GazeCoords" 
                                           Text="X: -, Y: -" 
                                           FontSize="11" 
                                           Foreground="#999999"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Повторить" Width="110" Margin="0,0,8,0" Click="Retry_Click"/>
            <Button Content="Отмена" Width="110" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="StartBtn" Content="Запустить" Width="110" IsEnabled="False" Click="Start_Click"/>
        </StackPanel>
    </Grid>
</Window>