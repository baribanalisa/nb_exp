<Window x:Class="NeuroBureau.Experiment.DeviceCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка устройств"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        ResizeMode="CanMinimize"
        Width="600"
        MaxWidth="1000">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Перед запуском проверим подключение устройств из эксперимента."
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Devices}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  MinWidth="600"
                  MinHeight="240"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Устройство" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="DevType" Binding="{Binding DevType}" Width="140"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Причина / детали" Binding="{Binding Details}" Width="3*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Повторить" Width="110" Margin="0,0,8,0" Click="Retry_Click"/>
            <Button Content="Отмена" Width="110" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="StartBtn" Content="Запустить" Width="110" IsEnabled="False" Click="Start_Click"/>
        </StackPanel>
    </Grid>
</Window>
