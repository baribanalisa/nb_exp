<Window x:Class="NeuroBureau.Experiment.HardwareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оборудование" Width="980" Height="560"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="SensorsGrid"
                  Grid.Row="0" Grid.Column="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  SelectionMode="Single"
                  Margin="0,0,12,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="name" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="dev-type" Binding="{Binding DevType}" Width="2*"/>
                <DataGridTextColumn Header="uid" Binding="{Binding Uid}" Width="2*"/>
                <DataGridTextColumn Header="params (JSON string)" Binding="{Binding Params}" Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Быстро настроить ShimmerGSR" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="BT name:"/>
            <TextBox x:Name="ShimmerBtNameBox" Margin="0,2,0,10"/>

            <TextBlock Text="Port:"/>
            <TextBox x:Name="ShimmerPortBox" Margin="0,2,0,10"/>

            <Button Content="Применить к выбранной строке (dev-type=ShimmerGSR)"
                    Click="ApplyShimmer_Click"
                    Margin="0,0,0,18"/>

            <TextBlock Text="Подсказка: dev-type для Shimmer строго 'ShimmerGSR'."
                       TextWrapping="Wrap" Opacity="0.75"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Сгенерировать UID" Click="GenUid_Click" Margin="0,0,8,0"/>
            <Button Content="Удалить строку" Click="Delete_Click" Margin="0,0,8,0"/>
            <Button Content="Сохранить" Click="Save_Click" FontWeight="Bold" Margin="0,0,8,0"/>
            <Button Content="Закрыть" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
